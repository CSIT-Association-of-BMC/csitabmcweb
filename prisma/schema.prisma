generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Notice {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  fullContent   String
  photo         String?
  publishedDate DateTime
  publishedBy   String
  department    String
  contactEmail  String
  contactPhone  String?
  location      String?
  category      String
  tags          String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
